<p id="notice"><%= notice %></p>

<h1>Izakayas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tel</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @izakayas.each do |izakaya| %>
      <tr>
        <td><%= izakaya.name %></td>
        <td><%= izakaya.tel %></td>
        <td><%= izakaya.address %></td>
        <td><%= link_to 'Show', izakaya %></td>
        <td><%= link_to 'Edit', edit_izakaya_path(izakaya) %></td>
        <td><%= link_to 'Destroy', izakaya, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

